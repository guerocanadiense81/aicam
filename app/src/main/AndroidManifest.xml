<manifest xmlns:android="http://schemas.android.com/apk/res/android">
  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
  <application android:name=".App" android:label="AiCam" android:allowBackup="true">
    <activity android:name=".ui.AlertDetailActivity"/>
    <activity android:name=".ui.SettingsActivity"/>
    <activity android:name=".ui.LiveActivity"/>
    <activity android:name=".ui.AlertsActivity"/>
    <activity android:name=".ui.MainActivity"/>
    <activity android:name=".ui.FirstRunActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
  </application>
</manifest>
